---
// src/pages/checkout.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { currentUser } from '../data/mockStore';

// Función para formatear dinero
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(price);
};

// Simulamos un Carrito de Compras "Hardcodeado" con items caros para forzar el límite
const cartItems = [
  {
    id: 1,
    name: "Lomo Vetado Premium (Caja 20kg)",
    sku: "LOM-VET-001",
    price: 155000,
    quantity: 10, // 10 cajas = $1.550.000 (Esto solo ya supera el límite)
    image: "https://profesorklocker.cl/cdn/shop/products/bifesdelomovetado.jpg?v=1681484066",
  },
  {
    id: 2,
    name: "Salmón Atlántico Fresco",
    sku: "SAL-ATL-002",
    price: 10500,
    quantity: 20,
    image: "https://www.agrosuperventas.com/medias/sys_master/images/he0/hb8/9715343327262/300Wx300H_Salm%C3%B3n%20Sin%20piel%20(sin%20fondo)/300Wx300H-Salm-n-Sin-piel-sin-fondo-.jpg",
  },
  {
    id: 3,
    name: "Aceite de Oliva Extra Virgen (5L)",
    sku: "ACE-OLI-005",
    price: 45000,
    quantity: 2, 
    image: "https://izaro.cl/cdn/shop/products/aceite_de_oliva_1800x.jpg?v=1585680040",
  }
];

// Cálculos
const subtotal = cartItems.reduce((acc, item) => acc + (item.price * item.quantity), 0);
const iva = subtotal * 0.19;
const total = subtotal + iva;

// REGLA DE NEGOCIO DEL INFORME (3.3):
// Verificamos si supera el límite de aprobación del usuario
const isOverLimit = total > currentUser.approvalLimit;
---

<Layout title="Checkout | Aprobación de Orden">
  <Navbar />

  <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-slate-900 mb-8">Resumen de Orden de Compra</h1>

    <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
      
      <section class="lg:col-span-7 bg-white shadow-sm border border-slate-200 rounded-xl overflow-hidden">
        <ul role="list" class="divide-y divide-slate-200">
          {cartItems.map((item) => (
            <li class="flex p-6">
              <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-slate-200">
                <img src={item.image} alt={item.name} class="h-full w-full object-cover object-center" />
              </div>

              <div class="ml-4 flex flex-1 flex-col">
                <div>
                  <div class="flex justify-between text-base font-medium text-slate-900">
                    <h3>{item.name}</h3>
                    <p class="ml-4">{formatPrice(item.price * item.quantity)}</p>
                  </div>
                  <p class="mt-1 text-sm text-slate-500">SKU: {item.sku}</p>
                </div>
                <div class="flex flex-1 items-end justify-between text-sm">
                  <p class="text-slate-500">Cantidad: {item.quantity}</p>
                  <div class="flex">
                    <button type="button" class="font-medium text-indigo-600 hover:text-indigo-500">Eliminar</button>
                  </div>
                </div>
              </div>
            </li>
          ))}
        </ul>
        <div class="bg-slate-50 px-6 py-4">
            <p class="text-xs text-slate-500 flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-green-600">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                </svg>
                Stock reservado en bodega por 20 min.
            </p>
        </div>
      </section>

      <section class="lg:col-span-5 mt-8 lg:mt-0">
        <div class="bg-white shadow-sm border border-slate-200 rounded-xl p-6">
          <h2 class="text-lg font-medium text-slate-900">Detalle de Costos</h2>
          
          <dl class="mt-6 space-y-4">
            <div class="flex items-center justify-between border-b border-slate-100 pb-4">
              <dt class="text-sm text-slate-600">Subtotal</dt>
              <dd class="text-sm font-medium text-slate-900">{formatPrice(subtotal)}</dd>
            </div>
            <div class="flex items-center justify-between border-b border-slate-100 pb-4">
              <dt class="text-sm text-slate-600">IVA (19%)</dt>
              <dd class="text-sm font-medium text-slate-900">{formatPrice(iva)}</dd>
            </div>
            <div class="flex items-center justify-between pt-2">
              <dt class="text-xl font-bold text-slate-900">Total a Pagar</dt>
              <dd class="text-xl font-bold text-indigo-600">{formatPrice(total)}</dd>
            </div>
          </dl>

          {isOverLimit ? (
            <div class="mt-6 bg-amber-50 border border-amber-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-amber-800">Requiere Aprobación Gerencial</h3>
                  <div class="mt-2 text-sm text-amber-700">
                    <p>El monto total excede su límite automático de <strong>{formatPrice(currentUser.approvalLimit)}</strong>.</p>
                    <p class="mt-1">La orden quedará en estado <em>"Pendiente de Autorización"</em> y se notificará a su supervisor.</p>
                  </div>
                </div>
              </div>
            </div>
          ) : (
            <div class="mt-6 bg-green-50 border border-green-200 rounded-lg p-4 text-green-800 text-sm">
                Orden dentro del límite automático. Procesamiento inmediato.
            </div>
          )}

          <div class="mt-6">
            <button 
                type="submit" 
                class={`w-full flex items-center justify-center rounded-md border border-transparent px-6 py-3 text-base font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 ${isOverLimit ? 'bg-amber-600 hover:bg-amber-700 focus:ring-amber-500' : 'bg-indigo-600 hover:bg-indigo-700 focus:ring-indigo-500'}`}
                onclick="alert('¡Prototipo finalizado! En un sistema real, esto enviaría el correo al gerente.')"
            >
              {isOverLimit ? 'Solicitar Aprobación' : 'Emitir Orden de Compra'}
            </button>
          </div>
          
          <p class="mt-4 text-center text-xs text-slate-500">
            Al procesar, acepta los <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">términos del Acuerdo Marco</a>.
          </p>
        </div>
      </section>
    </div>
  </main>
</Layout>