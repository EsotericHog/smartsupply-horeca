---
// src/pages/catalogo.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { products, currentUser } from '../data/mockStore';

// Corrección TS: Especificamos que price es un número
const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(price);
};
---

<Layout title="Catálogo B2B">
  <Navbar />

  <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4">
      <div>
        <h1 class="text-3xl font-bold text-slate-900">Catálogo de Abastecimiento</h1>
        <div class="flex items-center mt-2 text-sm text-slate-600">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 mr-2">
            Acuerdo Marco Vigente
          </span>
          <p>Precios pactados para: <span class="font-semibold">{currentUser.company}</span></p>
        </div>
      </div>

      <div class="flex gap-2 w-full md:w-auto">
        <input 
          type="text" 
          placeholder="Buscar SKU..." 
          class="block w-full md:w-64 rounded-md border-slate-300 border px-4 py-2 text-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
        />
        <button class="px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50">
          Filtrar
        </button>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
      {products.map((product) => (
        <div class="group relative bg-white border border-slate-200 rounded-2xl flex flex-col overflow-hidden hover:shadow-lg transition-all duration-300">
          
          <div class="h-56 w-full bg-slate-200 relative overflow-hidden">
            <img 
              src={product.image} 
              alt={product.name} 
              class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" 
            />
            
            {/* Etiqueta IA */}
            {product.isAiRecommended && (
              <div class="absolute top-2 right-2 bg-orange-500 text-white text-xs font-bold px-2 py-1 rounded-md shadow-sm flex items-center gap-1 z-10">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                  <path fill-rule="evenodd" d="M10 2c-1.716 0-3.408.106-5.07.31C3.806 2.45 3 3.414 3 4.517V17.25a.75.75 0 001.075.676L10 15.08l5.925 2.846A.75.75 0 0017 17.25V4.517c0-1.103-.806-2.068-1.93-2.207A41.403 41.403 0 0010 2z" clip-rule="evenodd" />
                </svg>
                Sugerido por IA
              </div>
            )}
          </div>

          <div class="flex-1 p-4 flex flex-col justify-between">
            <div>
              <h3 class="text-lg font-bold text-slate-900 leading-tight">
                {product.name}
              </h3>
              <p class="text-xs text-slate-500 mt-1">SKU: {product.sku} • Unidad: {product.unit}</p>
              
              <div class="mt-3 bg-slate-50 p-2 rounded-lg border border-slate-100">
                <p class="text-xs text-slate-400 line-through">Precio Lista: {formatPrice(product.listPrice)}</p>
                <div class="flex items-center justify-between">
                  <p class="text-xl font-bold text-indigo-700">{formatPrice(product.contractPrice)}</p>
                  {product.listPrice > product.contractPrice && (
                    <span class="text-xs font-semibold text-green-600 bg-green-100 px-2 py-0.5 rounded">
                      Ahorro Contrato
                    </span>
                  )}
                </div>
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-slate-100">
              <div class="flex items-center justify-between gap-3">
                 <input 
                  type="number" 
                  min="1" 
                  value="1" 
                  class="w-16 rounded-md border-slate-300 border text-center text-sm py-2"
                />
                <a href="/checkout" class="flex-1 bg-slate-900 text-white text-center px-4 py-2 rounded-md text-sm font-medium hover:bg-slate-800 transition-colors">
                  Agregar
                </a>
              </div>
              <p class={`text-xs mt-2 text-right ${product.stock < 20 ? 'text-red-600 font-bold' : 'text-slate-500'}`}>
                Stock: {product.stock} unid.
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>