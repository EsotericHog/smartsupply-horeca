---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { products } from '../data/mockStore';

// Filtramos el producto que la IA recomienda (Simulación de backend)
const aiSuggestion = products.find(p => p.isAiRecommended);
---

<Layout title="Dashboard Gerencial">
  <Navbar />

  <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    
    <div class="md:flex md:items-center md:justify-between mb-8">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-slate-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Panel de Control
        </h2>
        <p class="mt-1 text-sm text-slate-500">Visión general del estado de abastecimiento y alertas.</p>
      </div>
    </div>

    {aiSuggestion && (
      <div class="rounded-xl bg-gradient-to-r from-amber-50 to-orange-50 border border-orange-100 p-6 mb-8 shadow-sm relative overflow-hidden">
        <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-orange-200 rounded-full opacity-20 blur-xl"></div>
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="p-3 bg-orange-100 rounded-lg text-orange-600">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-orange-900">Motor de IA: Sugerencia de Reabastecimiento</h3>
            <p class="text-orange-800 mt-1 max-w-2xl">
              {aiSuggestion.aiReason}
              <span class="block mt-1 text-sm font-medium">Producto afectado: {aiSuggestion.name} (Stock actual: {aiSuggestion.stock} {aiSuggestion.unit})</span>
            </p>
            <div class="mt-4">
              <a href="/catalogo" class="inline-flex items-center gap-2 px-4 py-2 bg-orange-600 text-white text-sm font-medium rounded-lg hover:bg-orange-700 transition-colors shadow-sm">
                Revisar y Aprobar Pedido
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    )}

    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
      
      <div class="bg-white overflow-hidden rounded-xl shadow-sm border border-slate-100">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-blue-50 rounded-md">
              <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-slate-500 truncate">Gasto Acumulado (Dic)</dt>
                <dd>
                  <div class="text-2xl font-bold text-slate-900">$12.450.000</div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-slate-50 px-5 py-3">
          <div class="text-sm">
            <a href="#" class="font-medium text-blue-700 hover:text-blue-900"> Ver reporte financiero </a>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden rounded-xl shadow-sm border border-slate-100">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-green-50 rounded-md">
              <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-slate-500 truncate">Ahorro "Acuerdos Marco"</dt>
                <dd>
                  <div class="text-2xl font-bold text-green-600">-$2.840.000</div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-slate-50 px-5 py-3">
          <div class="text-sm text-slate-500">
            Aplicado en 14 órdenes este mes
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden rounded-xl shadow-sm border border-slate-100">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0 p-3 bg-purple-50 rounded-md">
              <svg class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-slate-500 truncate">Pendientes de Aprobación</dt>
                <dd>
                  <div class="text-2xl font-bold text-slate-900">2</div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-slate-50 px-5 py-3">
          <div class="text-sm">
            <a href="#" class="font-medium text-purple-700 hover:text-purple-900"> Gestionar aprobaciones </a>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-sm border border-slate-200 rounded-xl overflow-hidden">
      <div class="px-6 py-4 border-b border-slate-200">
        <h3 class="text-lg font-medium leading-6 text-slate-900">Últimas Órdenes de Compra</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">ID Pedido</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Proveedor</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Estado</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Total</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Fecha</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200">
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-indigo-600">#OC-2025-089</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">Distribuidora HORECA Ltda.</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Aprobado
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">$850.000</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">10 Dic 2025</td>
            </tr>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-indigo-600">#OC-2025-090</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">Carnes Premium S.A.</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Pendiente Aprobación Gerencia
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-700">$2.100.000</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">Hoy</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </main>
</Layout>