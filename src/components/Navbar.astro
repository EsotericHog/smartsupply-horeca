---
// src/components/Navbar.astro
import { currentUser } from '../data/mockStore';
---

<nav class="bg-white border-b border-slate-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      
      <div class="flex">
        <div class="flex-shrink-0 flex items-center gap-2">
          <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-bold">S</div>
          <span class="font-bold text-xl tracking-tight text-slate-800">SmartSupply <span class="text-indigo-600">Horeca</span></span>
        </div>
        <div class="hidden sm:ml-8 sm:flex sm:space-x-8">
          <a href="/" class="border-indigo-500 text-slate-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
            Dashboard
          </a>
          <a href="/catalogo" class="border-transparent text-slate-500 hover:border-slate-300 hover:text-slate-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
            Catálogo B2B
          </a>
          <a href="#" class="border-transparent text-slate-500 hover:border-slate-300 hover:text-slate-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
            Mis Pedidos
          </a>
        </div>
      </div>

      <div class="flex items-center">
        <div class="flex-shrink-0">
          <button type="button" class="relative inline-flex items-center gap-2 px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <span>Nuevo Pedido Rápido</span>
          </button>
        </div>
        <div class="hidden md:ml-4 md:flex md:items-center">
          <div class="ml-3 relative">
            <div class="flex items-center gap-3">
              <div class="text-right hidden lg:block">
                <p class="text-sm font-medium text-slate-900">{currentUser.name}</p>
                <p class="text-xs text-slate-500">{currentUser.role} - {currentUser.company}</p>
              </div>
              <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold border border-indigo-200">
                {currentUser.name.charAt(0)}
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</nav>